# Google reCAPTCHA v3 (for contact form spam protection)
# Get your site key at: https://www.google.com/recaptcha/admin
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# MercadoPago Payment Integration
# Get your key at: https://www.mercadopago.com/developers/panel/credentials
REACT_APP_MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here

# PayPal Payment Integration
# Get your client ID at: https://developer.paypal.com/dashboard/applications
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id_here
# Sandbox (development) client ID
REACT_APP_PAYPAL_SANDBOX_CLIENT_ID=your_paypal_sandbox_client_id_here

# Backend API URL
# For local development: http://localhost:3001
# For production: your deployed API URL (EC2 with ngrok or domain)
REACT_APP_BACKEND_URL=https://your-backend-url.ngrok-free.app

# Optional: Retell AI (if using voice features)
# REACT_APP_RETELL_API_KEY=your_retell_api_key_here

# ========================================
# CLOSED BETA FEEDBACK SYSTEM
# ========================================
# Feature flag: Set to 'false' to revert to original Contact Us button
REACT_APP_CLOSED_BETA_FEEDBACK=true

# Formspree endpoint for beta feedback (create at formspree.io)
# Leave empty to only log feedback to backend (no email delivery)
REACT_APP_FORMSPREE_BETA_FEEDBACK_URL=https://formspree.io/f/your_beta_feedback_form_id

# Original Formspree ID for Contact Us (used when beta is disabled)
REACT_APP_FORMSPREE_ID=mqaregzo

# App version (for feedback metadata)
REACT_APP_VERSION=0.7.0
